---
// src/pages/blog/[slug].astro
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Calendar, User, Tag, ArrowLeft } from 'lucide-react';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, pubDate, author, image, category, tags } = entry.data;

const formattedDate = pubDate.toLocaleDateString('es-PE', {
  year: 'numeric', month: 'long', day: 'numeric'
});

// Generamos la URL absoluta de la imagen para que Google la encuentre bien
const imageUrl = new URL(image, Astro.site).href;
---

<BaseLayout title={title} description={description}>
  
  {/* --- BLOQUE SEO AVANZADO (JSON-LD) --- 
      Esto inyecta datos estructurados que Google ama.
  */}
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": title,
    "image": [imageUrl],
    "datePublished": pubDate.toISOString().split('T')[0],
    "dateModified": new Date().toISOString().split('T')[0],
    "author": [{
        "@type": "Person",
        "name": author,
        "url": "https://voltioacademy.lat/contacto"
    }],
    "publisher": {
        "@type": "Organization",
        "name": "VoltioAcademy",
        "logo": {
            "@type": "ImageObject",
            "url": "https://voltioacademy.lat/favicon.svg"
        }
    },
    "description": description,
    "articleSection": category,
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": Astro.url.href
    }
  })} />

  <article class="relative min-h-screen pb-20">
    
    <div class="relative w-full h-[60vh] min-h-[500px] flex items-end justify-center overflow-hidden pb-32">
        
        <div class="absolute inset-0 z-0">
            <img src={image} alt={title} class="w-full h-full object-cover opacity-40 blur-sm" />
            <div class="absolute inset-0 bg-gradient-to-b from-volt-dark/50 via-volt-dark/80 to-volt-dark"></div>
        </div>

        {/* CONTENIDO DEL HEADER (Con el ajuste pt-10 para que no choque) */}
        <div class="relative z-10 max-w-4xl mx-auto px-4 text-center pt-10">
            
            <div class="flex flex-col items-center gap-4 mb-6">
                 <a href="/blog" class="inline-flex items-center gap-2 text-slate-400 hover:text-volt-primary transition-colors text-sm font-bold bg-black/50 px-4 py-2 rounded-full backdrop-blur-md border border-white/10 mb-2">
                    <ArrowLeft className="w-4 h-4" /> Volver al Blog
                </a>
                <span class="px-3 py-1 bg-volt-primary text-volt-dark font-bold text-xs uppercase rounded cursor-default shadow-[0_0_15px_rgba(0,240,255,0.3)]">
                    {category}
                </span>
            </div>

            <h1 class="text-4xl md:text-6xl lg:text-7xl font-display font-bold text-white leading-tight mb-8 drop-shadow-[0_5px_15px_rgba(0,0,0,0.9)]">
                {title}
            </h1>

            <div class="flex flex-wrap items-center justify-center gap-6 text-slate-300 text-sm font-mono bg-black/30 inline-block px-6 py-3 rounded-2xl backdrop-blur-sm border border-white/5">
                <div class="flex items-center gap-2">
                    <User className="w-4 h-4 text-volt-primary" />
                    <span>{author}</span>
                </div>
                <div class="flex items-center gap-2">
                    <Calendar className="w-4 h-4 text-volt-secondary" />
                    <span>{formattedDate}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 -mt-20 relative z-20">
        
        <div class="bg-volt-dark/80 border border-white/10 backdrop-blur-xl rounded-3xl p-8 md:p-16 shadow-[0_-20px_60px_rgba(0,0,0,0.8)]">
            
            <div class="prose prose-invert prose-lg max-w-none prose-headings:font-display prose-headings:text-white prose-a:text-volt-primary hover:prose-a:text-white prose-img:rounded-xl prose-img:shadow-xl">
                <Content />
            </div>

            <div class="mt-16 pt-8 border-t border-white/10">
                <h4 class="text-sm font-bold text-slate-400 mb-4 flex items-center gap-2">
                    <Tag className="w-4 h-4" /> Temas relacionados:
                </h4>
                <div class="flex flex-wrap gap-2">
                    {tags && tags.map((tag) => (
                        <span class="bg-white/5 border border-white/10 px-4 py-1.5 rounded-full text-xs text-slate-300 hover:border-volt-primary hover:text-volt-primary hover:bg-volt-primary/10 transition-all cursor-pointer lowercase">
                            #{tag}
                        </span>
                    ))}
                </div>
            </div>

        </div>

    </div>

  </article>

</BaseLayout>