---
// src/pages/cursos.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import CourseGrid from '../components/ui/CourseGrid.jsx';
import { Award } from 'lucide-react';
---

<BaseLayout title="Cursos Profesionales" description="Capacitación técnica certificada">
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    
    <div class="text-center mb-16 relative">
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-volt-primary/20 blur-[100px] rounded-full pointer-events-none"></div>
      <span class="inline-block py-1 px-3 rounded-full bg-volt-secondary/10 border border-volt-secondary/30 text-volt-secondary text-xs font-bold tracking-widest mb-4 uppercase">
        Centro de Entrenamiento
      </span>
      <h1 class="text-4xl md:text-6xl font-display font-bold text-white mb-6">
        Mejora tus <span class="text-transparent bg-clip-text bg-gradient-to-r from-volt-primary to-volt-secondary">Habilidades</span>
      </h1>
      <p class="text-slate-400 max-w-2xl mx-auto text-lg">
        Desbloquea contenido premium y lleva tu carrera al siguiente nivel.
      </p>
    </div>

    <CourseGrid client:load />

    {/* SECCIÓN DE CERTIFICACIÓN (Estática) */}
    <div class="mt-20 p-8 rounded-3xl bg-gradient-to-r from-volt-secondary/20 to-volt-dark border border-volt-secondary/30 relative overflow-hidden text-center md:text-left">
        <div class="absolute top-0 right-0 p-12 opacity-10">
            <Award className="w-64 h-64 text-volt-secondary rotate-12" />
        </div>
        <div class="relative z-10 flex flex-col md:flex-row items-center gap-8">
            <div class="p-4 bg-volt-secondary/20 rounded-full border border-volt-secondary shadow-[0_0_20px_rgba(112,0,255,0.3)]">
                <Award className="w-12 h-12 text-volt-secondary" />
            </div>
            <div>
                <h2 class="text-2xl md:text-3xl font-display font-bold text-white mb-2">
                    Certificación Oficial
                </h2>
                <p class="text-slate-300 max-w-xl">
                    Al completar todos los módulos, obtendrás un certificado digital validado en blockchain.
                </p>
            </div>
        </div>
    </div>

  </div>
</BaseLayout>