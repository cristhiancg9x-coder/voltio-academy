---
import BaseLayout from '../layouts/BaseLayout.astro';
import SignUpForm from '../components/ui/SignUpForm.jsx';
---

<BaseLayout title="Registrarse" description="Crea tu cuenta en VoltioAcademy">
  <div class="min-h-screen flex items-center justify-center px-4 py-20 relative overflow-hidden">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-volt-primary/10 blur-[120px] rounded-full pointer-events-none"></div>
    <div class="relative z-10 w-full">
        <SignUpForm client:load />
    </div>
  </div>
</BaseLayout>