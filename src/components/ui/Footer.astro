---
// src/components/ui/Footer.astro
import { Zap, Github, Twitter, Linkedin, Mail } from 'lucide-react';
import ServerStatus from './ServerStatus.jsx'; // <--- AÑADE ESTO
import SubscribeForm from './SubscribeForm.jsx'; // <--- NUEVO
---
<footer class="relative border-t border-volt-primary/20 bg-volt-dark overflow-hidden">
  
  <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-volt-primary to-transparent opacity-50"></div>
  
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px] pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      
      {/* COLUMNA 1: Marca y Misión */}
      <div class="space-y-4">
        <div class="flex items-center gap-2">
            <div class="p-1.5 bg-volt-primary/10 rounded-lg border border-volt-primary/50">
                <Zap className="h-5 w-5 text-volt-primary" />
            </div>
            <span class="font-display font-bold text-lg text-white tracking-wider">
              VOLTIO<span class="text-volt-primary">ACADEMY</span>
            </span>
        </div>
        <p class="text-slate-400 text-sm leading-relaxed">
          Formando a la próxima generación de técnicos electricistas con estándares internacionales y tecnología de vanguardia.
        </p>
        <div class="flex gap-4 pt-2">
            <a href="#" class="text-slate-500 hover:text-volt-primary transition-colors"><Twitter className="w-5 h-5" /></a>
            <a href="#" class="text-slate-500 hover:text-volt-primary transition-colors"><Github className="w-5 h-5" /></a>
            <a href="#" class="text-slate-500 hover:text-volt-primary transition-colors"><Linkedin className="w-5 h-5" /></a>
        </div>
      </div>

      {/* COLUMNA 2: Enlaces Rápidos (SEO Silos) */}
      <div>
        <h4 class="text-white font-bold mb-6 font-display">Explora</h4>
        <ul class="space-y-3 text-sm text-slate-400">
          <li><a href="/cursos" class="hover:text-volt-primary transition-colors flex items-center gap-2">➔ Cursos Profesionales</a></li>
          
          {/* */}
          <li><a href="/normativa" class="hover:text-volt-primary transition-colors flex items-center gap-2">➔ Normativa 2025</a></li>
          
          {/* Este ya estaba bien, lo dejamos igual: */}
          <li><a href="/recursos" class="hover:text-volt-primary transition-colors flex items-center gap-2">➔ Guías PDF Gratis</a></li>
          
          <li><a href="/herramientas" class="hover:text-volt-primary transition-colors flex items-center gap-2">➔ Calculadoras Eléctricas</a></li>
        </ul>
      </div>

      {/* COLUMNA 3: Legal (Confianza) */}
      <div>
        <h4 class="text-white font-bold mb-6 font-display">Legal</h4>
        <ul class="space-y-3 text-sm text-slate-400">
          <li><a href="/privacidad" class="hover:text-white transition-colors">Política de Privacidad</a></li>
          <li><a href="/terminos" class="hover:text-white transition-colors">Términos de Uso</a></li>
          <li><a href="/cookies" class="hover:text-white transition-colors">Política de Cookies</a></li>
          <li><a href="/contacto" class="hover:text-white transition-colors">Contacto / Soporte</a></li>
        </ul>
      </div>

      {/* COLUMNA 4: Newsletter (Conversión) */}
      <div>
        <h4 class="text-white font-bold mb-6 font-display">Boletín Técnico</h4>
        <p class="text-slate-400 text-xs mb-4">Recibe tips de instalación y actualizaciones del CNE cada semana.</p>
        <SubscribeForm client:visible />
      </div>

    </div>

    <div class="border-t border-white/5 mt-12 pt-8 text-center">
      <p class="text-slate-600 text-xs">
        © 2025 VoltioAcademy. Desarrollado con tecnología Astro.lat
      </p>
      <ServerStatus client:visible />
    </div>
  </div>
</footer>   