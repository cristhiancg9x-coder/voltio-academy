---
// src/components/home/Categories.astro
import { Home, Factory, Sun, Zap, ShieldCheck, PenTool } from 'lucide-react';

const categories = [
  {
    title: "Instalaciones Residenciales",
    desc: "Cableado, tableros y diagramas unifilares.",
    icon: Home,
    color: "text-volt-primary", // Cian
    href: "/blog/residencial"
  },
  {
    title: "Electricidad Industrial",
    desc: "Motores, contactores y automatización.",
    icon: Factory,
    color: "text-volt-secondary", // Violeta
    href: "/blog/industrial"
  },
  {
    title: "Energías Renovables",
    desc: "Paneles solares y cálculo de inversores.",
    icon: Sun,
    color: "text-yellow-400", // Amarillo
    href: "/blog/energias-renovables"
  },
  {
    title: "Fundamentos & Teoría",
    desc: "Ley de Ohm, Watt y física eléctrica.",
    icon: Zap,
    color: "text-volt-accent", // Rojo
    href: "/blog/fundamentos"
  },
  {
    title: "Normativa y Seguridad",
    desc: "CNE, RETIE y normas de seguridad.",
    icon: ShieldCheck, 
    color: "text-green-400", // Verde
    href: "/normativa"
  },
  {
    title: "Herramientas Pro",
    desc: "Instrumentos de medición y equipos.",
    icon: PenTool,
    color: "text-orange-400",
    href: "/herramientas"
  }
];
---

<section class="py-16 md:py-24 relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="text-center mb-8 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-4">
        Áreas de <span class="text-transparent bg-clip-text bg-gradient-to-r from-volt-primary to-volt-secondary">Especialización</span>
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto text-sm md:text-base">
        Desliza para explorar nuestros módulos de aprendizaje.
      </p>
    </div>

    {/* CONTENEDOR HÍBRIDO: 
        - En Móvil: Flex + Scroll Horizontal (Carrusel)
        - En PC (md): Grid (Cuadrícula normal)
    */}
    <div class="flex md:grid md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 overflow-x-auto md:overflow-visible pb-4 snap-x snap-mandatory scrollbar-hide">
      
      {categories.map((cat) => (
        <a href={cat.href} class="min-w-[85%] md:min-w-0 snap-center group relative bg-volt-dark/50 border border-white/5 rounded-2xl p-6 md:p-8 hover:border-volt-primary/50 transition-all duration-300 overflow-hidden">
          
          <div class="absolute inset-0 bg-gradient-to-br from-volt-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <div class="relative z-10">
            <div class={`w-12 h-12 md:w-14 md:h-14 rounded-xl bg-white/5 flex items-center justify-center mb-4 md:mb-6 group-hover:scale-110 transition-transform duration-300 border border-white/5 group-hover:border-volt-primary/30`}>
              <cat.icon className={`w-6 h-6 md:w-7 md:h-7 ${cat.color}`} />
            </div>
            
            <h3 class="text-lg md:text-xl font-bold text-white mb-2 font-display group-hover:text-volt-primary transition-colors">
              {cat.title}
            </h3>
            
            <p class="text-slate-400 text-sm leading-relaxed group-hover:text-slate-300">
              {cat.desc}
            </p>
          </div>
        </a>
      ))}

    </div>
  </div>
</section>

<style>
  /* Ocultar barra de scroll en navegadores Webkit (Chrome/Safari) */
  .scrollbar-hide::-webkit-scrollbar {
      display: none;
  }
  /* Ocultar barra de scroll en Firefox */
  .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
  }
</style>