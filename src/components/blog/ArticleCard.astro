---
// src/components/blog/ArticleCard.astro
import { Calendar, Clock, ArrowRight } from 'lucide-react';

// Recibimos el post como propiedad
const { post } = Astro.props;
const { title, description, pubDate, image, category } = post.data;

// Formatear fecha
const formattedDate = pubDate.toLocaleDateString('es-PE', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group relative flex flex-col h-full bg-volt-dark/40 border border-white/10 rounded-2xl overflow-hidden backdrop-blur-sm transition-all duration-300 hover:border-volt-primary/50 hover:shadow-[0_0_30px_rgba(0,240,255,0.15)]">
  
  <div class="relative h-48 overflow-hidden">
    <div class="absolute inset-0 bg-volt-dark/20 group-hover:bg-transparent transition-colors z-10"></div>
    <img 
      src={image} 
      alt={title} 
      class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
    />
    <div class="absolute top-4 left-4 z-20">
      <span class="px-3 py-1 text-xs font-bold uppercase tracking-wider text-volt-dark bg-volt-primary rounded-full">
        {category}
      </span>
    </div>
  </div>

  <div class="flex-1 p-6 flex flex-col">
    
    <div class="flex items-center gap-4 text-xs text-slate-500 mb-4 font-mono">
      <div class="flex items-center gap-1">
        <Calendar className="w-3 h-3" />
        {formattedDate}
      </div>
      <div class="flex items-center gap-1">
        <Clock className="w-3 h-3" />
        5 min lectura
      </div>
    </div>

    <h3 class="text-xl font-bold text-white mb-3 font-display leading-tight group-hover:text-volt-primary transition-colors">
      <a href={`/blog/${post.slug}`}>
        {title}
      </a>
    </h3>

    <p class="text-slate-400 text-sm mb-6 flex-1 line-clamp-3">
      {description}
    </p>

    <div class="pt-4 border-t border-white/5 flex items-center justify-between">
      <span class="text-xs text-slate-500">Por {post.data.author}</span>
      <a href={`/blog/${post.slug}`} class="flex items-center gap-2 text-sm font-bold text-volt-primary group-hover:translate-x-2 transition-transform">
        Leer m√°s <ArrowRight className="w-4 h-4" />
      </a>
    </div>

  </div>
</article>